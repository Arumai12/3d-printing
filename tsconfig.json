  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "typeRoots": [ "./src/types", "./node_modules/@types"],
    "rootDir": "src/",
    "outDir": "build/src/"
  },
  "include": [
    "src/**/*.ts",
  ]
}
